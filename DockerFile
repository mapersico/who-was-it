# Stage 1: Build
FROM node:20-alpine as build-stage

WORKDIR /app

# Copiamos los package.json
COPY package*.json ./

# Instalamos las dependencias
RUN npm install

# Copiamos el resto del proyecto
COPY . .

# Ejecutamos el build de Angular SSR
RUN npm run build

# Stage 2: Producción
FROM node:20-alpine

WORKDIR /app

# Copiamos solo lo necesario desde el build stage
COPY --from=build-stage /app/dist/who-was-it ./dist/who-was-it
COPY --from=build-stage /app/package*.json ./

# Instalamos solo dependencias de producción
RUN npm install --omit=dev

# Exponemos el puerto en el que correrá la app
EXPOSE 4000

# Comando para ejecutar la app SSR
CMD ["node", "dist/who-was-it/server/main.server.mjs"]
